<!DOCTYPE html>
<html>
<head>
    <%= include header.ejs %>
</head>
<body>
<div class="container-fluid">
<%= include navigation.ejs %>
    <%= include pagination.ejs %>
    <div class="row">
        <div class="col-md-12">
            <% for (var i = 0; i < books.length; i++) { %>
            <div class="book">
                <% var isbn = books[i].isbn10 || books[i].isbn13 %>
                <a href="/book?isbn=<%= isbn %>"><%= books[i].isbn10 || books[i].isbn13 %>: <%= books[i].title %></a>
            </div>
            <% } %>
        </div>
    </div>
    <%= include pagination.ejs %>
    <%= include footer.ejs %>
</div>
</body>
</html>
